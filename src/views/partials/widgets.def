<div class="widget box" id="settings">
	<div class="boxHandle">Настройки<i class="actionIcon close" onclick="toggleWidget('settings')"></i></div>
	<div class="tabs"><label for="basicTab">Общее</label><label for="themesTab">Темы</label></div>
	<input type="radio" name="tabs" class="hidden" id="themesTab">
	<div class="boxContent">
		<div class="column">
			<a class="row" onclick="setTheme('Tumbach')">Tumbach</a>
			<a class="row" onclick="setTheme('Tumbach Light')">Tumbach Light</a>
			<a class="row" onclick="setTheme('Myata')">Myata</a>
		</div>
		<div class="column">
			<textarea id="themeEditor" rows="20" cols="30"></textarea>
		</div>
	</div>

	<input type="radio" name="tabs" class="hidden" id="basicTab" checked>
	<div class="boxContent">
		<div class="column">
			<div class="row">
				<input type="checkbox" class="hidden" id="relativeTime"></input><label for="relativeTime" class="iconCheckbox checkbox"> Точное время постов</label>
			</div>
			<div class="row">
				<input type="checkbox" class="hidden" id="showNSFW"></input><label for="showNSFW" class="iconCheckbox checkbox"> Показывать NSFW-картинки</label>
			</div>
			<div class="row">
				<a onclick="moveSidebar('row')">Сайдбар слева</a>
			</div>
			<div class="row">
				<a onclick="moveSidebar('row-reverse')">Cайдбар справа</a>
			</div>
		</div>
		<div class="column">
		</div>
	</div>
	<div class="boxButtons">
		<button type="button" onclick="toggleWidget('settings')">Принять</button>
	</div>
</div>

<div class="widget box" id="autoSpoil">
	<div class="boxHandle">Автоскрытие<i class="actionIcon close" onclick="toggleWidget('autoSpoil')"></i></div>
	<div class="boxContent">
		<textarea>#wipe(samelines,samewords,longwords,symbols,capslock,numbers,whitespace)</textarea>
	</div>
	<div class="boxButtons">
		<button type="button" onclick="toggleWidget('autoSpoil')">Принять</button>
	</div>
</div>

<div class="widget fullscreen" id="imageViewer"></div>
