<div class="postWrapper" id="wrapper-{{!post.id}}">
  <div class="postDetails">
    <input type="checkbox" class="hidden" id="delete-{{!post.id}}">
    <label for="delete-{{!post.id}}" class="iconCheckbox checkbox"></label>
    {{? post.sageru}}
      <i class="actionIcon sage"></i>
    {{?}}
    <span class="topic">{{!post.subject}}</span>
    <span class="author">{{!post.name}}</span>
    <span class="postDate">{{!post.created_at}}</span>
    <a class="refLink" onclick="quickReply({{!post.id}})">№{{!post.id}}</a>
    {{? post.id == post.thread}}
      [<a href="/{{!it.site.pathPrefix}}{{!it.board.name}}/res/{{!post.thread}}.html#{{!post.id}}">В тред</a>]
    {{?}}
    <input type="checkbox" id="postMenu{{!post.id}}" class="hidden">
    <label for="postMenu{{!post.id}}" class="iconCheckbox postMenu menu jsOnly"></label>
    <div>
      <div class="actionIcon source">
        Исходный текст
      </div>
      <div class="actionIcon edit">
        Редактировать
      </div>
      <div class="actionIcon delete">
        Удалить
      </div>
      <div class="actionIcon spoil">
        Скрыть
      </div>
    </div>
  </div>
  <div class="post">
    <div class="postMedia">
      <!--<a href="https://tuderi.tumba.ch/img/fullsize0.png" target="_blank" onclick="showImage(event, 'https://tuderi.tumba.ch/img/fullsize0.png')">
        <img class="preview" src="https://tuderi.tumba.ch/img/preview0.png">
        <div class="imgInfo">
          fullsize0.png, 0.4MB
        </div>
      </a>-->
    </div>
    <div class="postText">
      {{=post.bodymarkup}}
      {{? post.replies}}
        <div class="postReplies">
          Ответы: {{!post.replies}}
        </div>
      {{?}}
    </div>
  </div>
</div>
