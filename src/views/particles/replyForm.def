<input type="checkbox" id="replyFormShow" class="hidden">

<div id="replyForm" class="widget">
	<div class="widgetHandle">
		{{? it.thread}}Ответ в тред <span class="pseudoLink">#{{=it.thread.thread_id}}</span>{{?? }}Создание треда в <span class="pseudoLink">/{{=it.board.name}}/</span>{{? }}
		<label for="replyFormShow" class="icon close"></label>
	</div>

	<form action="{{!it.foxtan.protocol}}://{{!it.foxtan.host}}:{{!it.foxtan.port}}/api/post.create" method="post" class="widgetContent">
		<input type="hidden" name="boardName" value="{{!it.board.name}}">
		<input type="hidden" name="redirect" value="{{=it.board.name}}{{? it.thread}}/res/{{=it.thread.id}}.html#bottom{{?? }}#top{{? }}">
		<input type="hidden" id="threadNumber" name="threadNumber" value="{{? it.thread}}{{=it.thread.thread_id}}{{? }}">

		<div class="row">
			<input name="subject" type="text" placeholder="Тема">

			<input type="checkbox" name="OP" id="opCheckbox" class="hidden">
			<label for="opCheckbox" class="btn icon op"> OP</label>

			<input type="checkbox" name="sageru" id="sageCheckbox" class="hidden">
			<label for="sageCheckbox" class="btn icon sage"> Sage</label>

			<input type="checkbox" id="markupHelp" class="hidden">
			<label for="markupHelp" class="btn icon help"> Help</label>
		</div>

		<div class="row">
			<textarea name="text" required></textarea>
		</div>

		<input type="checkbox" id="fileInputsCheckbox" class="hidden">

		<label class="row icon more hidden" for="fileInputsCheckbox"></label>

		<div id="fileInputs">
			<div class="row">
				<input type="file" name="file0" id="file0">

				<input type="checkbox" class="hidden" name="file0Rating" id="file0Rating">
				<label class="btn icon caution" for="file0Rating"></label>
			</div>

			<div class="row">
				<input type="file" name="file1" id="file1">

				<input type="checkbox" class="hidden" name="file1Rating" id="file1Rating">
				<label class="btn icon caution" for="file1Rating"></label>
			</div>
		</div>

		<div class="row">
			<input type="password" name="password" value="password">
			<button class="btn icon send" id="submit">Отправить</button>
		</div>
	</form>
</div>
<!--/replyForm-->
