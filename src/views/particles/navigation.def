<input type="checkbox" id="hideSidebarCheckbox" hidden>
<input type="checkbox" id="hideImagesCheckbox" hidden>

<div id="sidebar">
	<a href="/" id="logo">
		<div>Тумба.ч</div>
		<div>технологичный и удобный имиджборд</div>
	</a>

	<div id="boards">
		{{~it.boardGroups || [{boards: it.boards, name: "boards", title: "Доски"}] :group}}
			{{~group.boards.filter(function(board) { return !board.hidden; }) :board}}
				<a href="{{=it.site.url.pathname}}{{!board.name}}/" {{? it.board && board.name == it.board.name}} class="selected"{{? }}>
					/{{!board.name}}/ — {{!board.title}}
				</a>
			{{~ }}
		{{~ }}
	</div>

	<div id="musicPlayer" class="jsOnly" hidden>
		<div id="title"></div>
		<div id="controls">
			<a class="btn material-icons" id="previousTrack">skip_previous</a>
			<a class="btn material-icons" id="pause">play_arrow</a>
			<a class="btn material-icons" id="nextTrack">skip_next</a>
		</div>
		<div id="progressWrap">
			<input id="progress" type="range" value="0" min="0" max="100" step="any">
		</div>
	</div>

	<noscript id="JSInd">
		JavaScript отключен<br><small>Некоторые функции недоступны.</small>
	</noscript>
</div>

<div id="navbar">
	<div>
		<a id="toTop" class="btn material-icons" href="#top">arrow_upward</a>
		<a href="{{=it.site.url.pathname}}" class="btn material-icons mobileOnly">home</a>
		<!-- <button type="button" onclick="toggleWidget('search')" class="btn material-icons jsOnly">search</button> -->
		<button type="button" class="material-icons jsOnly">search</button>
		<button type="button" onclick="toggleWidget('settings', settings.init)" class="material-icons desktopOnly jsOnly">settings</button>
		<label for="hideSidebarCheckbox" class="btn material-icons desktopOnly">view_quilt</label>
	</div>
	<div>
		<!-- <a onclick="toggleWidget('favourite')" class="btn material-icons jsOnly">star</a> -->
		<button type="button" class="material-icons jsOnly">star</button>
		<label for="hideImagesCheckbox" class="btn material-icons desktopOnly">visibility_off</label>
		<label for="replyFormShow" id="replyFormButton" class="btn material-icons replyFormShow">chat</label>
		<a id="toBot" class="btn material-icons" href="#bottom">arrow_downward</a>
	</div>
</div>
