<input type="checkbox" id="hideSidebarCheckbox" hidden>
<input type="checkbox" id="hideImagesCheckbox" hidden>

<div id="sidebar">
	<div id="logo">
		<a href="/{{!it.site.pathPrefix}}">Тумба.ч</a>
		<a href="/{{!it.site.pathPrefix}}">технологичный и удобный имиджборд</a>
	</div>

	<div id="boards">
		{{~it.boardGroups || [{boards: it.boards, name: "boards", title: "Доски"}] :group}}
			{{~group.boards.filter(function(board) { return !board.hidden; }) :board}}
				<a href="/{{!it.site.pathPrefix}}{{!board.name}}" {{? it.board && board.name == it.board.name}} class="selected"{{? }}>
					/{{!board.name}}/ — {{!board.title}}
				</a>
			{{~ }}
		{{~ }}
	</div>

	<noscript>JavaScript отключен.</noscript>
</div>

<div id="topbar">
	<a href="/{{!it.site.pathPrefix}}">Тумба.ч</a>

	{{~it.boardGroups || [{boards: it.boards, name: "boards", title: "Доски"}] :group}}
		{{~group.boards.filter(function(board) { return !board.hidden; }) :board}}
			<a href="/{{!it.site.pathPrefix}}{{!board.name}}/">/{{!board.name}}/</a>
		{{~ }}
	{{~ }}

	<!--<div id="progressBar"></div>-->
</div>

<div id="navbar">
	<div class="column">
		<a id="toTop" class="btn icon up" href="#top"></a>
		<a onclick="switchAttribute(sel('.widget#search'), 'hidden')" class="btn icon search jsOnly"></a>
		<a onclick="switchAttribute(sel('.widget#preferences'), 'hidden')" class="btn icon preferences jsOnly"></a>
		<label for="hideSidebarCheckbox" class="btn icon wide pseudoLink"></label>
	</div>
	<div class="column">
		<label for="hideImagesCheckbox" class="btn icon hide pseudoLink"></label>
		<label for="replyFormShow" id="replyFormButton" class="btn icon replyFormShow pseudoLink"></label>
		<a id="toBot" class="btn icon down" href="#bottom"></a>
	</div>
</div>
