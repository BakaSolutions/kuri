<input type="checkbox" id="hideSidebarCheckbox" hidden>
<input type="checkbox" id="hideImagesCheckbox" hidden>

<div id="sidebar">
	<a href="/" id="logo"><h2>Тумбач</h2></a>

	<div id="boards">
		{{~it.boardGroups || [{boards: it.boards, name: "boards", title: "Доски"}] :group}}
			{{~group.boards.filter(function(board) { return !board.hidden; }) :board}}
				<a href="{{=it.site.url.pathname}}{{!board.name}}/">
					/{{!board.name}}/ — {{!board.title}}
				</a>
			{{~ }}
		{{~ }}
	</div>

	<div id="musicPlayer" class="jsOnly" hidden>
		<div id="title"></div>
		<div id="controls">
			<a class="btn material-icons" id="previousTrack">skip_previous</a>
			<a class="btn material-icons" id="pause">play_arrow</a>
			<a class="btn material-icons" id="nextTrack">skip_next</a>
		</div>
		<div id="progressWrap">
			<input id="progress" type="range" value="0" min="0" max="100" step="any">
		</div>
	</div>

	<noscript id="JSInd">
		JavaScript отключен<br><small>Некоторые функции недоступны.</small>
	</noscript>
</div>

<div id="navbar">
	<div>
		<a id="toTop" class="btn" href="#top"><img class="icon" src="/static/icons/material-design/ic_arrow_upward_24px.svg"></a>
		<a href="{{=it.site.url.pathname}}" class="btn mobileOnly"><img class="icon" src="/static/icons/material-design/ic_home_24px.svg"></a>
		<a class="btn jsOnly"><img class="icon" src="/static/icons/material-design/ic_search_24px.svg"></a>
		<a class="btn jsOnly desktopOnly" onclick="toggleWidget('settings', settings.init)"><img class="icon" src="/static/icons/material-design/ic_settings_24px.svg"></a>
		<label for="hideSidebarCheckbox" class="btn desktopOnly"><img class="icon" src="/static/icons/material-design/ic_view_quilt_24px.svg"></label>
	</div>
	<div>
		<a onclick="toggleWidget('favourite', initStarredList)" class="btn jsOnly"><img class="icon" src="/static/icons/material-design/ic_star_24px.svg"></a>
		<label for="hideImagesCheckbox" class="btn desktopOnly"><img class="icon" src="/static/icons/material-design/ic_visibility_off_24px.svg"></label>
		<a onclick="replyForm.toggleFloating()" class="btn jsOnly"><img class="icon" src="/static/icons/material-design/ic_chat_24px.svg"></a>
		<a id="toBot" class="btn" href="#bottom"><img class="icon" src="/static/icons/material-design/ic_arrow_downward_24px.svg"></a>
	</div>
</div>
