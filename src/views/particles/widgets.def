<div class="widget" id="preferences" hidden>
	<div class="widgetBgLayer" onclick="switchAttribute(sel('.widget#preferences'), 'hidden')"></div>
	<div class="widgetBox">
		<h2>
			Настройки
		</h2>

		<div class="tabs">
			<label for="basicSettingsTab">Общее</label>
			<label for="postingSettingsTab">Постинг</label>
			<label for="themesSettingsTab">Темы</label>
			<label for="spoilingSettingsTab">Скрытие</label>
			<label for="securitySettingsTab">Безопасность</label>
		</div>

		<input type="radio" id="basicSettingsTab" checked hidden name="settingsTabs">
		<div class="tab">
			<input type="checkbox" id="localTime" hidden class="icon visibleCheckbox">
			<label for="localTime">
				Отображать местное время
			</label>

			<input type="checkbox" id="relativeTime" hidden class="icon visibleCheckbox">
			<label for="relativeTime">
				Отображать относительное время
			</label>

			<input type="checkbox" id="AJAXNavigation" hidden class="icon visibleCheckbox">
			<label for="AJAXNavigation">
				AJAX-навигация
			</label>
		</div>

		<input type="radio" id="postingSettingsTab" hidden name="settingsTabs">
		<div class="tab">
			<input type="checkbox" id="AJAXPosting" hidden class="icon visibleCheckbox">
			<label for="AJAXPosting">
				AJAX-постинг
			</label>
		</div>

		<input type="radio" id="themesSettingsTab" hidden name="settingsTabs">
		<div class="tab">
			<a class="row" onclick="setTheme(THEMES['Tumbach'])">Tumbach</a>
			<a class="row" onclick="setTheme(THEMES['Tumbach Light'])">Tumbach Light</a>
		</div>

		<input type="radio" id="spoilingSettingsTab" hidden name="settingsTabs">
		<div class="column">
			<textarea id="autospoiling">#wipe(samelines,samewords,longwords,symbols,capslock,numbers,whitespace)</textarea>
		</div>

		<input type="radio" id="securitySettingsTab" hidden name="settingsTabs">
		<div class="column">
			Использовать следующий пароль:
			<input type="password" placeholder="Пароль для удаления">
		</div>
	</div>
</div>

<div class="widget" id="search" hidden>
	<div class="widgetBgLayer" onclick="switchAttribute(sel('.widget#search'), 'hidden')"></div>
	<div class="widgetBox">
		<h2>Поиск</h2>

		<form id="searchForm">
			<input type="text" placeholder="Тумбач: найдется кое-что">
			<button type="button" class="btn icon search"></button>
		</form>
	</div>
</div>

<form id="deletePosts" method="POST" action="{{!it.foxtan.protocol}}://{{!it.foxtan.host}}:{{!it.foxtan.port}}/api/v1/post.delete" hidden>
	<div>
		Удалить выбранные посты?
		<div>
			<a onclick="sel('#deletePosts').submit()">Фтопку!</a>
			<a onclick="deselectAllPosts()">Отмена.</a>
		</div>
	</div>
	<input type="password" name="password" placeholder="Пароль" required>
</form>
