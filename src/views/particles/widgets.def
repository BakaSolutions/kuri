<div id="widgetsWrapper">
	<div id="preferences" class="widget" hidden>
		<div class="widgetHandle">Настройки<label onclick="switchAttribute(sel('.widget#preferences'), 'hidden')" class="icon close"></label></div>

		<div class="widgetContent">
			<div class="tabs">
				<label for="basicTab">Общее</label>
				<label for="themesTab">Темы</label>
				<label for="postingTab">Постинг</label>
				<label for="spoilingTab">Скрытие</label>
				<label for="securityTab">Безопасность</label>
			</div>

			<input type="radio" name="tabs" hidden id="basicTab" checked>
			<div class="column">
				<div class="row">
					<input type="checkbox" hidden class="visibleCheckbox" id="localTime" checked>
					<label for="localTime">Местное время постов время постов</label>
					<input type="checkbox" hidden class="visibleCheckbox" id="relativeTime" checked>
					<label for="relativeTime">Относительное время постов</label>
				</div>
				<div class="row">
					<input type="checkbox" hidden class="visibleCheckbox" id="doNotHideNSFW">
					<label for="doNotHideNSFW">Не скрывать NSFW</label>
					<input type="checkbox" hidden class="visibleCheckbox" id="ajaxNavigation" checked>
					<label for="ajaxNavigation">Использовать AJAX-навигацию</label>
				</div>
			</div>

			<input type="radio" name="tabs" hidden id="themesTab">
			<div class="row">
				<div class="column">
					<a class="row" onclick="setTheme(THEMES['Tumbach'])">Tumbach</a>
					<a class="row" onclick="setTheme(THEMES['Tumbach Light'])">Tumbach Light</a>
				</div>
				<textarea id="themeEditor"></textarea>
			</div>

			<input type="radio" name="tabs" hidden id="postingTab">
			<div class="column">

			</div>

			<input type="radio" name="tabs" hidden id="spoilingTab">
			<div class="column">
				<textarea id="autospoiling">#wipe(samelines,samewords,longwords,symbols,capslock,numbers,whitespace)</textarea>
			</div>

			<input type="radio" name="tabs" hidden id="securityTab">
			<div class="column">
				Использовать следующий пароль:
				<input type="password" value="password">
			</div>
		</div>
	</div>

	<div id="search" class="widget" hidden>
		<div class="widgetHandle">Поиск<label onclick="switchAttribute(sel('.widget#search'), 'hidden')" class="icon close"></label></div>

		<div class="widgetContent">
			<div class="row">
				<input type="text" placeholder="Тумбач: найдется кое-что">
				<button type="button" name="button" class="btn icon search"></button>
			</div>
		</div>
	</div>
</div>
