<article class="post" id="{{!post.number}}">
	<div class="postDetails">
		<!-- Удаление поста -->
		<input type="checkbox" id="delete-{{!it.board.name}}:{{!post.number}}" name="post" value="{{!it.board.name}}:{{!post.number}}" form="deletePosts" hidden>
		<label for="delete-{{!it.board.name}}:{{!post.number}}" class="material-icons jsOnly" onclick="activatePostRemovalWidget()">delete</label>

		<!-- Сажа -->
		{{? post.sageru}}
			<span class="material-icons">details</span>
		{{? }}

		<!-- Рефлинк -->
		<a class="refLink" name="{{!post.number}}" href="{{=it.site.url.pathname}}{{!it.board.name}}/res/{{!post.threadNumber}}.html{{? post.number != post.threadNumber}}#{{!post.number}}">{{?? }}">{{? }}
			{{? post.subject}}{{!post.subject}}{{? }} #{{!post.number}}
		</a>

		<!-- Дата -->
		<time data-creationdate="{{!post.createdAt}}">{{!post.formatted_date}}</time>


		<!-- Скрытие -->
		<!-- <span class="icon spoil jsOnly" onclick="spoilPost(this, {{? post.number === post.threadNumber}}1{{? }})"></span> -->

		<!-- Меню -->
		<span class="material-icons jsOnly">menu</span>

		<!-- Быстрый ответ -->
		<span class="material-icons jsOnly" onclick="quickReply({{!post.number}}, {{!post.threadNumber}})">reply</span>
	</div>
	<div class="postBody">
		{{? Array.isArray(post.files) && post.files.length}}
			<div class="postAttachments">
				{{~post.files :file}}
					{{? file.mime.split("/")[0] == "image" || file.mime.split("/")[0] == "video"}}
						<div class="thumb">
							<img src="/static/nopic.png">

							<a class="info" href="{{=it.foxtan.upload}}{{!file.path}}" target="_blank" onclick="showImage(event, '{{=it.foxtan.upload}}{{!file.path}}')">
								<span>{{!file.path}}</span>
								<span>{{! (file.size / 1048576).toFixed(2) }} Mb</span>
							</a>

							<a class="dlLink" href="{{=it.foxtan.upload}}{{!file.path}}" download="{{!file.path}}">сохранить</a>
						</div>
					{{?? }}
						<a class="unpreviewable" href="{{=it.foxtan.upload}}{{!file.path}}" download="{{!file.path}}">{{!file.path}} <div>({{! (file.size / 1048576).toFixed(2) }} Mb)</div></a>
					{{? }}
				{{~ }}
			</div>
		{{? }}
		<div class="postText">
			{{=post.text}}

			{{? post.replies }}
				<div class="postReplies">Ответы: {{!post.replies}}</div>
			{{? }}
		</div>
	</div>
</article>
