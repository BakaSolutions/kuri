<article class="post">
	<div class="postDetails">
		{{? post.sageru}}<span class="sage icon"></span>{{? }}
		{{? post.subject}}<span class="topic">{{!post.subject}}</span>{{? }}
		<span class="author">{{? post.name}}{{!post.name}}{{?? }}Неизвестный{{? }}</span>
		<span class="date" data-creationdate="{{!post.created_at}}">{{!post.formatted_date}}</span>
		<a class="refLink" href="/{{!it.site.pathPrefix}}{{!it.board.name}}/res/{{!post.thread}}.html#{{!post.id}}">#{{!post.id}}</a>

		<aside class="postMenu">
			<span class="icon reply jsonly"></span> <!-- onclick="quickReply({{!post.id}}, {{!post.thread}})" -->
			<!--<span class="icon edit jsOnly"></span>-->
			<!--<span class="icon delete jsOnly"></span>-->
			<span class="icon spoil jsOnly" onclick="spoilPost(this, {{? post.id == post.thread}}1{{? }})"></span>
			<span class="icon menu jsOnly"></span>
			<!-- <span class="icon source jsOnly"></span> -->
		</aside>
	</div>
	<div class="postBody">
		<div class="postAttachments">
			{{? post.id == post.thread}} <!-- Bootleg -->
				<div class="thumb">
					<a href="/static/nopic.png" target="_blank"><img src="/static/nopic.png"></a>
					<a href="/static/nopic.png" download><span>nopic.png</span> <span>0.1mb</span></a>
				</div>
			{{? }}
		</div>
		<div class="postText">
			{{=post.body}}
      
      {{? post.replies }}
        <div class="postReplies">
          Ответы: {{!post.replies}}
        </div>
      {{? }}
		</div>
	</div>
</article>