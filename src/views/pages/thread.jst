<!DOCTYPE html>
<html lang="ru">
	{{#def["particles/head"]}}

	<input type="checkbox" id="wideViewCheckbox" hidden>
	<input type="checkbox" id="hideImagesCheckbox" hidden>

	{{#def["particles/sidebar"]}}
	<main>
		<a name="top"></a>
		<header>
			<a id="title" href="{{=it.site.url.pathname}}{{!it.board.name}}/">
				<h1>{{!it.title}}</h1>
				<h2>/{{!it.board.name}}/ â€” {{!it.board.title}}</h2>
			</a>
		</header>

		<div class="thread">
			{{ let thread = it.thread; }}
			{{~thread.posts :post}}
				{{#def['particles/post']}}
			{{~ }}
		</div>

		{{#def['particles/replyForm']}}

		<a name="bottom"></a>
	</main>
	{{#def["particles/navbar"]}}
</html>
