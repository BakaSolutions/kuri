<!DOCTYPE html>
<html lang='{{!it.site.locale}}'>
{{#def['partials/head']}}
<body>
  {{#def['partials/sidebar']}}
  {{#def['partials/nav']}}
  <a id='top'></a>
  <main>
    {{#def['custom/content/0'] || ''}}
    <div>
      <span class="disabled stats float-r">
        {{!it.translate('Bump limit', 'bumpLimitText')}}: {{!it.board.bumpLimit}}<br>
        {{!it.translate('Post limit', 'postLimitText')}}: {{!it.board.postLimit}}<br>
        {{!it.translate('Max size of a file', 'maxFileSizeText')}}: {{!it.board.maxFileSize/1024/1024}} Mb
      </span>
      <h1>{{!it.title}}
        <a href="/{{!it.site.pathPrefix}}{{!it.board.name}}/">
          <span class="board-name disabled_opacity">/{{!it.board.name}}/</span>
        </a>
      </h1>
      <div class="clr"></div>
      {{? !it.thread.postingEnabled}}
        <h2 class='message-posting-disabled'>
          {{!it.translate('Posting is disabled in this thread', 'postingDisabledThreadText')}}
        </h2>
      {{??}}
        <h2 class='message-post-limit-reached js-message-post-limit-reached'
            {{? !it.thread.postLimitReached}}style='display: none;'{{?}}>
          {{!it.translate('Post limit reached', 'postLimitReachedText')}}
        </h2>
        <h3 class='message-bump-limit-reached js-message-bump-limit-reached'
            {{? it.thread.postLimitReached || !it.thread.bumpLimitReached}}style='display: none;'{{?}}>
          {{!it.translate('Bump limit reached', 'bumpLimitReachedText')}}
        </h3>
      {{?}}
    </div>
    {{~['top'] :position}}
      {{#def['board/createAction']}}
    {{~}}
    <div id='threads'>
      {{~[it.thread] :thread}}
        {{#def['board/thread']}}
      {{~}}
    </div>
    {{~['bottom'] :position}}
      {{#def['board/createAction']}}
    {{~}}
    {{#def['partials/footer']}}
  </main>
  <a id='bottom'></a>
</body>
</html>