<!DOCTYPE html>
<html>
	{{#def["particles/head"]}}
	<body>
		{{#def["particles/navigation"]}}
		<main>
			<a name="top"></a>
			<header>
				<!-- <img id="banner"> -->

				<a id="title" href="{{=it.site.url.pathname}}{{!it.board.name}}/">
					<h2>{{!it.title}}</h2>
					<h4>/{{!it.board.name}}/ â€” {{!it.board.title}}</h4>
				</a>

				<div>
					<a class="btn material-icons jsOnly desktopOnly" onclick="showBoardInfo('{{!it.board.title}}', {{!it.board.bumpLimit}}, {{!it.board.fileLimit}})">help</a>
				</div>
			</header>

			{{#def['particles/replyForm']}}

			<div class="thread">
				{{ let thread = it.thread; }}
				{{~thread.posts :post}}
					{{#def['particles/post']}}
				{{~ }}
			</div>
			<a name="bottom"></a>
		</main>

		{{#def["particles/widgets"]}}
		{{#def["particles/notifications"]}}
	</body>
</html>
