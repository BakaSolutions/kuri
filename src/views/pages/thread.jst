<!DOCTYPE html>
<html>
	{{#def["particles/head"]}}
	<body>
		{{#def["particles/navigation"]}}
		<main>
			<a name="top"></a>
			<header>
				<a id="banner" href="{{=it.site.url.pathname}}{{!it.board.name}}/">
					{{!it.title}}
				</a>
			</header>
			<div class="thread">
				{{~it.thread.posts :post}}
					{{#def['particles/post']}}
				{{~ }}
			</div>
			<a name="bottom"></a>
		</main>

		{{#def['particles/replyForm']}}
		{{#def["particles/widgets"]}}
		{{#def["particles/notifications"]}}
	</body>
</html>
