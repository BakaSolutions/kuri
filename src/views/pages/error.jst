<!DOCTYPE html>
<html>
	{{#def["particles/head"]}}
	<body>
		<input type="checkbox" id="wideViewCheckbox" hidden>
		<input type="checkbox" id="hideImagesCheckbox" hidden>
		
		{{#def["particles/sidebar"]}}
		<main>
			<link rel="stylesheet" href="/css/error.css">
			<a name="top"></a>
			<header>
				<a id="title" href="/">
					<h2>{{!it.error}}</h2>
					<h4>{{!it.message}}</h4>
				</a>

				{{?it.stack}}
					<pre>{{=it.stack}}</pre>
				{{?}}

			</header>

			<div class="noThreads" id="banner">
				<img src="/static/err.png">
			</div>
		</main>
		{{#def["particles/navbar"]}}

		{{#def["particles/widgets"]}}
		{{#def["particles/notifications"]}}
	</body>
</html>
