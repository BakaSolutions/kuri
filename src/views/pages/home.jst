<!DOCTYPE html>
<html>
	{{#def["particles/head"]}}
	<body>
		{{#def["particles/navigation"]}}
		<main>
			<header id="mainPageLogo">
				<div>Тумба.ч</div>
				<div>технологичный и удобный имиджборд</div>
			</header>
			<div id="boardList">
				{{~it.boardGroups || [{boards: it.boards, name: "boards", title: "Доски"}] :group}}
				<div class="group">
					<div class="groupTitle">{{!group.title}}</div>
					{{~group.boards.filter((board) => !board.hidden) :board}}
						<a href="/{{!it.site.pathPrefix}}{{!board.name}}/">
							/{{!board.name}}/ — {{!board.title}}
						</a>
					{{~ }}
				</div>
			{{~ }}
			</div>

			<div class="tabs">
				<label for="rulesTab">Правила</label>
				<label for="faqTab">ЧаВО</label>
			</div>

			<input type="radio" name="homeTabs" hidden id="rulesTab" checked>
			<div class="column">
				{{#def["particles/rules"]}}
			</div>

			<input type="radio" name="homeTabs" hidden id="faqTab">
			<div class="column">
				{{#def["particles/faq"]}}
			</div>

		</main>
		{{#def["particles/widgets"]}}
	</body>
</html>
