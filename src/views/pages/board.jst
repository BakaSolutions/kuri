<!DOCTYPE html>
<html>
  {{#def["partials/head"]}}
	<body data-theme="tumbach">
  {{#def["partials/sidebar"]}}
  {{#def["partials/topbar"]}}
		<div id="mainColumn">
			<header>
        <a id="banner" href="/{{!it.site.pathPrefix}}{{!it.board.name}}/">
          /{{!it.board.name}}/ &mdash; {{!it.board.title}}
        </a>
				{{#def["partials/replyForm"]}}
			</header>
			{{~it.threads :thread}}
				<div id="threadFlow">
          <a name="top"></a>
					<div class="thread">
						{{~[thread.lastPosts.shift()] :post}}
						{{#def['partials/post']}}
						{{~}}
						{{? thread.omittedPosts}}
						Пропущено постов: {{!thread.omittedPosts}}
						{{?}}
						{{~thread.lastPosts :post}}
						{{#def['partials/post']}}
						{{~}}
					</div>
          <a name="bottom"></a>
				</div>
			{{~}}
		</div>
		<div id="rightTopCorner">
			<a href="#">Галерея</a>
			<a href="/{{!it.site.pathPrefix}}{{!it.board.name}}/catalog.html">Каталог</a>
			<a href="#">Архив</a>
		</div>
		{{#def["partials/widgets"]}}
	</body>
</html>
