<!DOCTYPE html>
<html>
	{{#def["particles/head"]}}
	<body>
		{{#def["particles/navigation"]}}
		<a name="top"></a>
		<main>
			<header>
				<a id="banner" href="/{{!it.site.pathPrefix}}{{!it.board.name}}/">
					/{{!it.board.name}}/ — {{!it.board.title}}
				</a>
				<div class="row">
					<a href="#" class="icon catalogueLink">Каталог</a>
					<a href="#" class="icon archiveLink">Архив</a>
				</div>
			</header>
			{{? !it.threads.length}}
				<div class="noThreads">Здесь никого, кроме нас, цыплят!</div>
			{{?? }}
				{{~it.threads :thread}}
					<div class="thread">
						{{~[thread.lastPosts.shift()] :post}}
							{{#def['particles/post']}}
						{{~ }}

						{{? thread.omittedPosts}}
							<div class="omittedPosts">Пропущено постов: {{!thread.omittedPosts}}</div>
						{{? }}

						{{~thread.lastPosts :post}}
							{{#def['particles/post']}}
						{{~ }}
					</div>
				{{~ }}
			{{? }}
		</main>
		<a name="bottom"></a>

		{{#def['particles/replyForm']}}
		{{#def["particles/widgets"]}}
	</body>
</html>
