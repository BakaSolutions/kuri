<!DOCTYPE html>
<html>
	{{#def["partials/head"]}}
	<body>
		<div id="mainColumn">
			<header>
				<a id="banner" href="/{{!it.site.pathPrefix}}{{!it.board.name}}/">
					/{{!it.board.name}}/ &mdash; {{!it.board.title}}
				</a>
				{{#def["partials/replyForm"]}}
			</header>
			{{? !it.threads.length}}
				<div>Здесь нет никого, кроме нас, цыплят!</div>
			{{?}}
			<a name="top"></a>
			{{~it.threads :thread}}
				<div id="threadFlow">
					<div class="thread">
						{{~[thread.lastPosts.shift()] :post}}
						{{#def['partials/post']}}
						{{~}}
						{{? thread.omittedPosts}}
						Пропущено постов: {{!thread.omittedPosts}}
						{{?}}
						{{~thread.lastPosts :post}}
						{{#def['partials/post']}}
						{{~}}
					</div>
				</div>
			{{~}}
			<a name="bottom"></a>
		</div>
		{{#def["partials/sidebar"]}}
		{{#def["partials/topbar"]}}
		{{#def["partials/widgets"]}}
	</body>
</html>
