<!DOCTYPE html>
<html>
	{{#def["particles/head"]}}
	<body>
		{{#def["particles/navigation"]}}
		<header>
			<a id="banner" href="/{{!it.site.pathPrefix}}{{!it.board.name}}/">
				/{{!it.board.name}}/ — {{!it.board.title}}
			</a>
		</header>
		<a name="top"></a>
		<main>
			{{? !it.threads.length}}
				<div class="noThreads">Здесь нет никого, кроме нас, цыплят!</div>
			{{?? }}
				{{~it.threads :thread}}
					<div class="thread">
						{{~[thread.lastPosts.shift()] :post}}
							{{#def['particles/post']}}
						{{~ }}

						{{? thread.omittedPosts}}
							<div class="omittedPosts">Пропущено постов: {{!thread.omittedPosts}}</div>
						{{? }}
						
						{{~thread.lastPosts :post}}
							{{#def['particles/post']}}
						{{~ }}
					</div>
				{{~ }}
			{{? }}
		</main>
		<a name="bottom"></a>

		{{#def['particles/replyForm']}}
	</body>
</html>