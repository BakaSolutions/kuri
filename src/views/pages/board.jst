<!DOCTYPE html>
<html>
	{{#def["particles/head"]}}
	<body>
		{{#def["particles/navigation"]}}
		<main>
			<a name="top"></a>
			<header>
				<!-- <img id="banner"> -->

				<a id="title" href="{{=it.site.url.pathname}}{{!it.board.name}}/">
					<h2>/{{!it.board.name}}/ — {{!it.board.title}}</h2>
					<h3>{{!it.board.subtitle}}</h3>
				</a>
			</header>
			{{? !it.threads.length}}
				<div class="noThreads">Здесь никого, кроме нас, цыплят!</div>
			{{?? }}
				{{~it.threads :thread}}
					<div class="thread">
						{{~[thread.posts.shift()] :post}}
							{{#def['particles/post']}}
						{{~ }}

						{{? thread.omittedPosts}}
							<div class="omittedPosts">Пропущено постов: {{!thread.omittedPosts}}</div>
						{{? }}

						{{~thread.posts :post}}
							{{#def['particles/post']}}
						{{~ }}
					</div>
				{{~ }}
			{{? }}
			<a name="bottom"></a>
		</main>

		{{#def['particles/replyForm']}}
		{{#def["particles/widgets"]}}
		{{#def["particles/notifications"]}}
	</body>
</html>
